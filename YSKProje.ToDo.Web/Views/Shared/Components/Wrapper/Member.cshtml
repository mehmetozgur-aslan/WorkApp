@model AppUserListViewModel
@{
    string menu = TempData["menu"]?.ToString();
}


<div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">
        <img src="/img/@Model.Picture" alt="@(Model.Name+" "+Model.Surname)" class="w-100 img-thumbnail" style="height:10rem!important;" />
    </div>
    <div class="list-group list-group-flush">

        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(menu=="work"?"active":"")"><i class="fas fa-home mr-2"></i> Anasayfa</a>

        <a asp-action="Index" asp-controller="Work" asp-area="Member" class="list-group-item list-group-item-action @(menu=="work"?"active":"")"><i class="fas fa-arrow-alt-circle-down mr-2"></i> Gelen İş Emirleri</a>
        <a asp-action="Index" asp-controller="Task" class="list-group-item list-group-item-action"><i class="fas fa-arrow-alt-circle-up mr-2"></i>Tamamladığım işler</a>
        <a asp-action="Index" asp-controller="Notification" class="list-group-item list-group-item-action position-relative">
            <i class="fas fa-bell mr-2 mr-2"></i>
            @if (ViewBag.NotificationCount > 0)
            {
                <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important; left:1.7rem!important;">@ViewBag.NotificationCount</sub>
            }
            Bildirimler
        </a>
        <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action @(menu=="profile"?"active":"")"><i class="fas fa-user mr-2"></i> Profilim</a>
        <a asp-area="" asp-action="SignOut" asp-controller="Home" class="list-group-item list-group-item-action"><i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap</a>
    </div>
</div>