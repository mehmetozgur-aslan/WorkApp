@model AddAppUserDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}
<form class="mt-4 w-75 mx-auto p-3 shadow" asp-action="Register" method="post">
    <h4 class="text-center">Kayıt Formu</h4>
    <div class="form-group">
        <label asp-for="Name">Ad :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Soyad :</label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Parola :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Parola (Yeniden) :</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">e-Mail :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <a asp-action="Index" class="btn btn-warning btn-sm">Vazgeç</a>
    <button type="submit" class="btn btn-info btn-sm">Kayıt Ol!</button>
</form>
