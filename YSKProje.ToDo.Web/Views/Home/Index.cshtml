@model SignInAppUserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}


<form class="w-50 mx-auto shadow p-4 mt-5" asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>


    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <a asp-action="Register" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <button type="submit" class="btn btn-info btn-sm">Giriş</button>

</form>