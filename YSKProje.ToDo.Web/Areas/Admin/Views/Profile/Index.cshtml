@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şu anki fotoğraf</h5>
                    <img src="/img/@Model.Picture" class="w-100" alt="@(Model.Name+" "+Model.Surname)" style="height:10rem!important;" />
                </div>
            </div>

            <div class="col-md-2"></div>

            <div class="col-md-4">
                <div id="fieldPreview" style="display:none!important;">
                    <h5 class="text-center">Seçilen fotoğraf</h5>
                    <img id="picturePreview" src="" class="w-100" style="height:10rem!important;" />
                </div>
            </div>

            <div class="col-md-2"></div>

            <div class="col-md-12">
                <label> Fotoğraf Seç: </label>
                <input type="file" class="form-control-file" name="picture" id="picture"/>
            </div>

        </div>
    </div>    
        <button type="submit" class="btn btn-info btn-sm mt-2"><i class="fas fa-check mr-2"></i> Kaydet</button>
    </form>

@section JavaScript{ 
    <script type="text/javascript">
        $(document).ready(function () {

            $("#picture").change(function (e) {
                $("#fieldPreview").show();
                $("#picturePreview").attr('src', URL.createObjectURL(e.target.files[0]));
            })
        });

    </script>
} 