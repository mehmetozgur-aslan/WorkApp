@model TaskListAllDto
@{
    ViewData["Title"] = "GetDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-light my-2 mr-2"><i class="fas fa-file-excel mr-2"></i> Excel</a>
    <a asp-action="GetPDF" asp-route-id="@Model.Id" target="_blank" class="btn btn-light my-2 mr-2"><i class="fas fa-file-pdf mr-2"></i> PDF</a>
    <table class="table table-hover table-sm table-bordered text-center">

        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname isimli personelin @Model.Name görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Description</td>
                <td>@report.Detail</td>
            </tr>
        }

    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname personel şu anda @Model.Name görevi üzerinde çalışıyor. Henüz bir rapor yazılmamıştır.
    </div>
}
