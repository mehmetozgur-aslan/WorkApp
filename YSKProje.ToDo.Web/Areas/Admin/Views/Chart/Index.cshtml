
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




    <div class="row">

        <div class="col-md-6">
            <div id="piechart_3d" class="w-100" height: 500px;"></div>

        </div>


        <div class="col-md-6">
            <div id="piechart" class="w-100" height: 500px;"></div>

        </div>

    </div>



@section JavaScript{


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

        let mostCompletedTask = [['Personel Adı'],['Görev Sayısı']];

        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            $.ajax({
                type: "GET",
                url: "./Chart/GetUsersWithMostCompletedTask",
                async: false,
                success: function (data) {
                    let = result = jQuery.parseJSON(data);
                    $.each(result, function (index, value) {
                        mostCompletedTask.push(value.Username, value.TaskCount);
                    })
                }
            });

            var data = google.visualization.arrayToDataTable(
                mostCompletedTask
            );

            var options = {
                title: 'En çok iş tamamlayan 5 personeller'
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart'));

            chart.draw(data, options);
        }

        let mostWorkingTask = [['Personel Adı'], ['Çalıştığı Görev Sayısı']];

       


        google.charts.load("current", { packages: ["corechart"] });
        google.charts.setOnLoadCallback(drawChart2);
        function drawChart2() {

            $.ajax({
                type: "GET",
                url: "./Chart/GetUsersWithMostWorkingTask",
                async: false,
                success: function (data) {
                    let = result = jQuery.parseJSON(data);
                    $.each(result, function (index, value) {
                        mostWorkingTask.push(value.Username, value.TaskCount);
                    })
                }
            });

            var data = google.visualization.arrayToDataTable(mostWorkingTask);

            var options = {
                title: 'En çok İş Alan 5 Personel',
                is3D: true,
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
            chart.draw(data, options);
        }
    </script>


}
