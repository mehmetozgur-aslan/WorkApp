@model List<TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{
    <a asp-action="Add" asp-controller="Task" asp-area="Admin" class="btn btn-primary btn-sm">Görev Ekle</a>

    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Aciliyet</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate.ToString("D")</td>
                <td>@item.Urgent.Definition</td>
                <td>
                    <a asp-action="Update" asp-controller="Task" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                    <a asp-action="Delete" asp-controller="Task" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>

            </tr>
        }
    </table>
}
else
{
    <div class="p-3 text-center mt-3">
        <p class="lead">Herhangi bir göre bulunamadı.</p>
        <a asp-action="Add" asp-controller="Task" asp-area="Admin">Görev Ekle</a>
    </div>
}

