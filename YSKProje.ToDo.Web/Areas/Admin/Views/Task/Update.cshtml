@model TaskUpdateViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form asp-action="Add" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Ad</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description" class="form-control"> </textarea>
    </div>

    <div class="form-group">
        <label asp-for="UrgentId">Aciliyet Durumu</label>
        <span asp-validation-for="UrgentId" class="text-danger"></span>
        <select class="form-control" asp-for="UrgentId" asp-items="@ViewBag.UrgentList">
        </select>
    </div>

    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i> Kaydet</button>

</form>


@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
